{
  "manifest_version": 3,
  "name": "M365 Admin Quick Links",
  "version": "1.0.0",
  "description": "Quick access to essential Microsoft 365 and Power Platform admin portals",
  "permissions": ["storage", "sidePanel", "tabs", "bookmarks"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "M365 Admin Quick Links",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
